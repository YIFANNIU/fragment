<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tagit.fragment_demo.ListingActicity" >

    <TextView 
        android:id="@+id/textViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        />
    
    <TextView 
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:layout_below="@+id/textViewId"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    
    
    <TextView 
        android:id="@+id/textViewShowId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_toRightOf="@+id/textViewId"
        android:layout_toEndOf="@+id/textViewId"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"/>
    
    <TextView 
        android:id="@+id/textViewShowDesc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_alignStart="@+id/textViewShowId"
        android:layout_alignLeft="@+id/textViewShowId"
        android:layout_below="@+id/textViewShowId"
        android:layout_alignTop="@+id/textViewDesc"/>
    	
    
</RelativeLayout>




